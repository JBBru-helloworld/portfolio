<!-- views/components/footer.ejs -->
<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-links">
        <ul class="footer-nav">
          <li><a href="/" class="footer-link">Home</a></li>
          <li><a href="/work/" class="footer-link">Work</a></li>
          <li><a href="/about/" class="footer-link">About</a></li>
          <li><a href="/contact/" class="footer-link">Contact</a></li>
        </ul>
      </div>

      <div class="footer-social">
        <a
          href="<%= data.personal.socialLinks.github %>"
          class="social-link"
          aria-label="GitHub"
          target="_blank"
        >
          <img
            src="/assets/images/github-svgrepo-com.svg"
            alt="GitHub"
            class="social-icon"
          />
        </a>
        <a
          href="<%= data.personal.socialLinks.linkedin %>"
          class="social-link"
          aria-label="LinkedIn"
          target="_blank"
        >
          <img
            src="/assets/images/linkedin-round-svgrepo-com.svg"
            alt="LinkedIn"
            class="social-icon"
          />
        </a>
        <% if (data.personal.socialLinks.instagram) { %>
        <a
          href="<%= data.personal.socialLinks.instagram %>"
          class="social-link"
          aria-label="Instagram"
          target="_blank"
        >
          <img
            src="/assets/images/instagram-round-svgrepo-com.svg"
            alt="Instagram"
            class="social-icon"
          />
        </a>
        <% } %> <% if (data.personal.socialLinks.email) { %>
        <a
          href="<%= data.personal.socialLinks.email %>"
          class="social-link"
          aria-label="Email"
        >
          <img
            src="/assets/images/email-circle-fill-svgrepo-com.svg"
            alt="Email"
            class="social-icon"
          />
        </a>
        <% } %>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        &copy; <%= new Date().getFullYear() %> <%= data.personal.name %>.
        Crafted with passion and modern web technologies.
      </p>
    </div>
  </div>
</footer>
