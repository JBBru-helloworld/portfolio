<!-- views/pages/contact.ejs -->
<section class="contact-section">
  <div class="container">
    <h1 class="page-title">Get in Touch</h1>
    <p class="page-description">
      Have a project in mind? Let's work together to bring your ideas to life.
    </p>

    <div class="contact-grid">
      <form
        class="contact-form"
        id="contactForm"
        action="https://formspree.io/f/mzzaqgyy"
        method="POST"
        accept-charset="UTF-8"
      >
        <!-- Formspree configuration -->
        <input
          type="hidden"
          name="_subject"
          value="New contact form submission from Portfolio"
        />
        <input type="hidden" name="_next" value="/thank-you/" />
        <input type="hidden" name="_captcha" value="false" />

        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            minlength="2"
            maxlength="50"
            placeholder="Your full name"
          />
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            placeholder="your.email@example.com"
          />
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <textarea
            id="message"
            name="message"
            required
            minlength="10"
            maxlength="1000"
            rows="5"
            placeholder="Tell me about your project or idea..."
          ></textarea>
        </div>

        <button type="submit" class="submit-button" id="submitBtn">
          <span class="submit-text">Send Message</span>
          <span class="submit-loading" style="display: none">Sending...</span>
        </button>
      </form>

      <div class="contact-info">
        <h2>Let's Connect</h2>
        <p>
          I'm always interested in hearing about new projects and opportunities.
        </p>

        <div class="social-links">
          <a
            href="https://www.linkedin.com/in/joshuabonham03"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="LinkedIn"
          >
            <img
              src="/assets/images/linkedin-round-svgrepo-com.svg"
              width="24"
              height="24"
            />
          </a>
          <a
            href="https://github.com/JBBru-helloworld"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub"
          >
            <img
              src="/assets/images/github-svgrepo-com.svg"
              width="24"
              height="24"
            />
          </a>
          <a
            href="https://www.instagram.com/jb_bru/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
          >
            <img
              src="/assets/images/instagram-round-svgrepo-com.svg"
              width="24"
              height="24"
            />
          </a>
          <a
            href="mailto:jb.brubusiness3@gmail.com"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Email"
          >
            <img
              src="/assets/images/email-circle-fill-svgrepo-com.svg"
              width="28"
              height="28"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
