<!-- About Hero Section -->
<section class="about-section">
  <h1 class="page-title">About Me</h1>
  <p class="page-description">
    Passionate UX/UI designer and developer creating intuitive digital
    experiences
  </p>

  <!-- About Main Content -->
  <div class="container">
    <div class="about-hero-section">
      <!-- Profile Image Section -->
      <div class="about-profile-section">
        <div class="about-profile-image">
          <img src="assets/images/profile.jpg" alt="Joshua Bonham" />
        </div>
      </div>

      <!-- About Content + Resume Bento -->
      <div class="about-content-section">
        <!-- About Text -->
        <div class="about-text-card">
          <h2>Hello! I'm Joshua Bonham</h2>
          <p>
            I'm a passionate UX/UI designer and developer with a focus on
            creating intuitive and beautiful digital experiences. With expertise
            in both design principles and front-end development, I bridge the
            gap between aesthetics and functionality.
          </p>
          <p>
            My approach combines user-centered design thinking with technical
            proficiency, allowing me to create solutions that not only look
            great but also perform exceptionally well.
          </p>
        </div>

        <!-- Resume Bento -->
        <div class="resume-bento">
          <div class="bento-content">
            <span class="bento-label">Resume</span>
            <h3 class="bento-title">Download CV</h3>
            <p class="bento-description">
              Get a detailed overview of my experience, skills, and qualifications.
            </p>
            <a href="assets/resume/Joshua Edwin Rene Bonham_Resume.pdf" 
               class="resume-download-btn" 
               download="Joshua_Bonham_Resume.pdf"
               target="_blank">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 15L7 10H11V3H13V10H17L12 15Z" fill="currentColor"/>
                <path d="M20 18H4V20H20V18Z" fill="currentColor"/>
              </svg>
              Download PDF
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="about-grid">

    <!-- Skills Section -->
    <div class="skills-section">
      <h2>Skills & Expertise</h2>
      <div class="skills-grid-simple" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem;">
        <div class="skill-category">
          <h3>Frontend Development</h3>
          <div class="skill-tags">
            <span class="skill-tag">React.js</span>
            <span class="skill-tag">JavaScript</span>
            <span class="skill-tag">HTML5</span>
            <span class="skill-tag">CSS3</span>
            <span class="skill-tag">Tailwind CSS</span>
          </div>
        </div>

        <div class="skill-category">
          <h3>Backend Development</h3>
          <div class="skill-tags">
            <span class="skill-tag">Node.js</span>
            <span class="skill-tag">Python</span>
            <span class="skill-tag">Scala</span>
            <span class="skill-tag">Express.js</span>
            <span class="skill-tag">Firebase</span>
            <span class="skill-tag">MongoDB</span>
          </div>
        </div>

        <div class="skill-category">
          <h3>Data & AI</h3>
          <div class="skill-tags">
            <span class="skill-tag">Python</span>
            <span class="skill-tag">Machine Learning</span>
            <span class="skill-tag">Data Analytics</span>
            <span class="skill-tag">Generative AI</span>
          </div>
        </div>

        <div class="skill-category">
          <h3>Cloud & DevOps</h3>
          <div class="skill-tags">
            <span class="skill-tag">AWS</span>
            <span class="skill-tag">Git</span>
            <span class="skill-tag">Docker</span>
            <span class="skill-tag">CI/CD</span>
          </div>
        </div>

        <div class="skill-category">
          <h3>Design & Tools</h3>
          <div class="skill-tags">
            <span class="skill-tag">UI/UX Design</span>
            <span class="skill-tag">Figma</span>
            <span class="skill-tag">Adobe Creative Suite</span>
            <span class="skill-tag">Sketch</span>
            <span class="skill-tag">Wireframing</span>
            <span class="skill-tag">Prototyping</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="cta-section">
      <h2>Let's Work Together</h2>
      <p>
        Interested in collaborating on a project? I'd love to hear from you!
      </p>
      <a href="contact.html" class="cta-button">Get in Touch</a>
    </div>

    <!-- Experience Section -->
    <% if (typeof experience !== 'undefined' && experience.length > 0) { %>
    <div class="timeline-section">
      <h2>Professional Experience</h2>
      <div class="timeline">
        <% experience.forEach(job => { %>
        <div class="timeline-item">
          <div class="timeline-date">
            <%= job.startDate %> - <%= job.endDate || 'Present' %>
          </div>
          <h3 class="timeline-title"><%= job.position %></h3>
          <div class="timeline-company"><%= job.company %></div>
          <p class="timeline-description"><%= job.description %></p>
          <% if (job.achievements) { %>
          <ul class="achievements">
            <% job.achievements.forEach(achievement => { %>
            <li><%= achievement %></li>
            <% }); %>
          </ul>
          <% } %>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>

    <!-- Education Section -->
    <% if (typeof education !== 'undefined' && education.length > 0) { %>
    <div class="education-section">
      <h2>Education</h2>
      <div class="skills-grid">
        <% education.forEach(edu => { %>
        <div class="skill-card">
          <h3><%= edu.degree %></h3>
          <h4><%= edu.institution %></h4>
          <p class="timeline-date"><%= edu.graduationYear %></p>
          <% if (edu.description) { %>
          <p><%= edu.description %></p>
          <% } %>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>

    <!-- Certifications Section -->
    <% if (typeof certifications !== 'undefined' && certifications.length > 0) {
    %>
    <div class="certifications">
      <h2>Certifications</h2>
      <div class="certification-gallery">
        <% certifications.forEach(cert => { %>
        <div class="certification-card">
          <div class="certification-logo">
            <img src="<%= cert.logo %>" alt="<%= cert.name %> logo" />
          </div>
          <div class="certification-name"><%= cert.name %></div>
          <div class="certification-issuer"><%= cert.issuer %></div>
        </div>
        <% }); %>
      </div>
    </div>
    <% } %>
  </div>
</section>
