<!-- Bio Section -->
  <div class="bio-section">
    <h2>Hello! I'm Your Name</h2>
    <p>
      I'm a passionate UX/UI designer and developer with a focus on creating
      intuitive and beautiful digital experiences. With expertise in both
      design principles and front-end development, I bridge the gap between
      aesthetics and functionality.
    </p>
    <p>
      My approach combines user-centered design thinking with technical
      proficiency, allowing me to create solutions that not only look great
      but also perform exceptionally well.
    </p>
  </div>
</div>

<!-- Skills Section -->
<% if (skills && skills.length > 0) { %>
<div class="skills-section">
  <h2>Skills & Expertise</h2>
  <div class="skills-grid">
    <% skills.forEach(skill => { %>
    <div class="skill-item">
      <div class="skill-icon">
        <i class="<%= skill.icon %>"></i>
      </div>
      <h3><%= skill.name %></h3>
      <p><%= skill.description %></p>
    </div>
    <% }); %>
  </div>
</div>
<% } %>

<!-- Experience Section -->
<% if (experience && experience.length > 0) { %>
<div class="experience-section">
  <h2>Professional Experience</h2>
  <div class="timeline">
    <% experience.forEach(job => { %>
    <div class="timeline-item">
      <div class="timeline-date"><%= job.startDate %> - <%= job.endDate || 'Present' %></div>
      <div class="timeline-content">
        <h3><%= job.position %></h3>
        <h4><%= job.company %></h4>
        <p><%= job.description %></p>
        <% if (job.achievements) { %>
        <ul class="achievements">
          <% job.achievements.forEach(achievement => { %>
          <li><%= achievement %></li>
          <% }); %>
        </ul>
        <% } %>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% } %>

<!-- Education Section -->
<% if (education && education.length > 0) { %>
<div class="education-section">
  <h2>Education</h2>
  <div class="education-grid">
    <% education.forEach(edu => { %>
    <div class="education-item">
      <h3><%= edu.degree %></h3>
      <h4><%= edu.institution %></h4>
      <p class="education-date"><%= edu.graduationYear %></p>
      <% if (edu.description) { %>
      <p><%= edu.description %></p>
      <% } %>
    </div>
    <% }); %>
  </div>
</div>
<% } %>

<!-- Call to Action -->
<div class="cta-section">
  <h2>Let's Work Together</h2>
  <p>Interested in collaborating on a project? I'd love to hear from you!</p>
  <a href="/contact" class="btn btn-primary">Get in Touch</a>
</div>